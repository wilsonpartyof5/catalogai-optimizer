{
  "name": "catalogai-optimizer",
  "version": "1.0.0",
  "main": "app/entry.server.tsx",
  "scripts": {
    "build": "npm run setup:db && rm -rf build && remix build",
    "dev": "remix dev",
    "start": "remix-serve build/index.js --port ${PORT:-3000}",
    "start:debug": "node --inspect build/index.js",
    "typecheck": "tsc",
    "test": "vitest",
    "setup:db": "node scripts/setup-db.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx db/seed.ts",
    "db:clear-sessions": "node scripts/clear-sessions.js"
  },
  "keywords": [
    "shopify",
    "ai",
    "catalog",
    "optimization"
  ],
  "author": "",
  "license": "ISC",
  "description": "CatalogAI Optimizer - AI-powered Shopify catalog optimization tool",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@remix-run/node": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "@remix-run/serve": "^2.17.1",
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-react": "^4.2.7",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-api": "^12.0.0",
    "@shopify/shopify-app-remix": "^4.0.2",
    "@shopify/shopify-app-session-storage-prisma": "^7.0.0",
    "@shopify/ui-extensions-react": "^2025.7.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.12.2",
    "bullmq": "^5.59.0",
    "dotenv": "^17.2.3",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "ioredis": "^5.4.1",
    "isbot": "^5.1.31",
    "openai": "^6.0.0",
    "pg": "^8.16.3",
    "prisma": "^6.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix": "^2.17.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.17.1",
    "@shopify/cli": "^3.85.5",
    "@shopify/theme": "^3.58.2",
    "@types/node": "^24.6.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module"
}
